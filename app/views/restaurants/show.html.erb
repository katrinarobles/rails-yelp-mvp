<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1"><%= @restaurant.name %></span>
  <p><%= link_to 'Back to Main', restaurants_path %></p>
</nav>
<div class="container">
<h2><%= @restaurant.name %></h2>
  <p>Address: <%= @restaurant.address %></p>
  <p>Phone: <%= @restaurant.phone_number %></p>
  <p>Category: <%= @restaurant.category %></p>
  <p>Reviews:</p>
  <ul class="list-group">
  <% @restaurant.reviews.first do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item">Rating: <%= review.rating %></li>
  <% end %>
</ul>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
</div>
